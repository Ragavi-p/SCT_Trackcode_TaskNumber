      text-align: center;
      padding: 40px;
    }

    h1 {
      font-size: 2.5rem;
      color: #00FFF5;
      margin-bottom: 20px;
    }

    .board {
      display: grid;
      grid-template-columns: repeat(3, 100px);
      gap: 15px;
      justify-content: center;
      margin: 30px auto;
    }

    .cell {
      width: 100px;
      height: 100px;
      font-size: 2.5rem;
      background-color: #1F1F1F;
      color: #E0E0E0;
      border: 2px solid #333;
      border-radius: 15px;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: 0.3s;
    }

    .cell:hover {
      box-shadow: 0 0 10px #00fff5;
      background-color: #222;
    }

    .cell.x {
      color: #00FFF5;
    }

    .cell.o {
      color: #FF4EDD;
    }

    .cell.winner {
      background-color: #FFFC00;
      color: #000;
      box-shadow: 0 0 20px #FFFC00;
    }

    .status {
      font-size: 1.5rem;
      margin-top: 10px;
